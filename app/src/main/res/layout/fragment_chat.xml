<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/radiuscolorshape"
        android:backgroundTint="@color/background3"
        android:layout_margin="10dp"
        android:id="@+id/searchview"
        >
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="@id/searchview"
            app:layout_constraintEnd_toEndOf="@id/searchview"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="8dp"
            android:id="@+id/searchicon"
            android:src="@drawable/ic_search"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:tint="@color/text1"
            android:padding="5dp"
            >

        </ImageButton>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/searchicon"
            android:layout_margin="10dp"
            android:hint="Tìm kiếm..."
            android:backgroundTint="@android:color/transparent"
            android:textColor="@color/text1"
            android:textColorHint="@color/text2"

            android:layout_marginStart="10dp"
            android:id="@+id/esearch"


            ></EditText>


    </androidx.constraintlayout.widget.ConstraintLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/searchview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/phanloai"
        android:layout_margin="10dp"
        android:checkedButton="@id/banbe"
        android:background="@drawable/radiusitembox"
        android:padding="3dp"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Tất cả"
            android:gravity="center"
            android:background="@drawable/radiobackgroundcolor"
            android:textColor="@color/text1"
            android:button="@android:color/transparent"
            android:id="@+id/tatca"
            ></RadioButton>
        <RadioButton
            android:layout_width="00dp"
            android:layout_weight="1"
            android:id="@+id/banbe"
            android:layout_height="wrap_content"
            android:background="@drawable/radiobackgroundcolor"
            android:textColor="@color/radiotextcolor"
            android:gravity="center"
            android:button="@android:color/transparent"
            android:text="Bạn bè">

        </RadioButton>
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/nhom"
            android:gravity="center"
            android:layout_height="wrap_content"

            android:background="@drawable/radiobackgroundcolor"
            android:textColor="@color/radiotextcolor"
            android:button="@android:color/transparent"

            android:text="Nhóm">

        </RadioButton>
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/cho"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/radiobackgroundcolor"
            android:textColor="@color/radiotextcolor"
            android:button="@android:color/transparent"
            android:text="Phòng chờ">

        </RadioButton>

    </RadioGroup>
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/phanloai"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/progressbar"
        android:translationZ="10dp"

        android:paddingVertical="10dp">

    </ProgressBar>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/phanloai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/rvchat"
       >


    </androidx.recyclerview.widget.RecyclerView>





</androidx.constraintlayout.widget.ConstraintLayout>
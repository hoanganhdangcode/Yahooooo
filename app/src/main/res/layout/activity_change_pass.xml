<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="300dp"
            android:layout_height="0dp"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintWidth_percent="0.5"
            android:id="@+id/logo1"
            android:src="@drawable/logo2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="-50dp"
            android:layout_marginStart="-50dp"
            ></de.hdodenhof.circleimageview.CircleImageView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:layout_marginTop="40dp"

            android:textStyle="bold"
            android:textSize="40sp"
            android:textAlignment="center"
            android:lines="1"
            app:layout_constraintTop_toBottomOf="@id/logo1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/title"


            ></TextView>






        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            app:boxStrokeErrorColor="@color/red"
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="@color/grey"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/df">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/epassword"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:lines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>




        <ImageButton
            android:id="@+id/show1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_show"
            android:tint="?android:textColorPrimary"
            app:layout_constraintTop_toTopOf="@id/passwordLayout"
            app:layout_constraintEnd_toEndOf="@id/passwordLayout"
            app:layout_constraintStart_toStartOf="@id/passwordLayout"
            app:layout_constraintBottom_toBottomOf="@id/passwordLayout"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:layout_constraintVertical_bias="0.5"
            ></ImageButton>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cofpasswordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Xác nhận mật khẩu"
            app:boxStrokeErrorColor="@color/red"
            app:boxStrokeWidth="2dp"
            app:boxStrokeColor="@color/grey"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toBottomOf="@id/passwordLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/df">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/econfirmpassword"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:textSize="20sp"
                android:lines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </com.google.android.material.textfield.TextInputLayout>




        <ImageButton
            android:id="@+id/show2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_show"
            android:tint="?android:textColorPrimary"
            app:layout_constraintTop_toTopOf="@id/cofpasswordLayout"
            app:layout_constraintEnd_toEndOf="@id/cofpasswordLayout"
            app:layout_constraintStart_toStartOf="@id/cofpasswordLayout"
            app:layout_constraintBottom_toBottomOf="@id/cofpasswordLayout"
            app:layout_constraintHorizontal_bias="1"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            app:layout_constraintVertical_bias="0.5"
            ></ImageButton>

        <ProgressBar
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/btnxacnhan"
            app:layout_constraintBottom_toBottomOf="@id/btnxacnhan"
            app:layout_constraintStart_toStartOf="@id/btnxacnhan"
            app:layout_constraintEnd_toEndOf="@id/btnxacnhan"
            android:id="@+id/progressbar"
            android:visibility="gone"
            ></ProgressBar>
        <Button
            android:layout_width="0dp"
            android:paddingHorizontal="20dp"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:lines="1"
            app:layout_constraintWidth_percent="0.5"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/cofpasswordLayout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/btnxacnhan"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0"
            ></Button>

        <Button
            android:id="@+id/btncancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey"
            android:lines="1"
            android:text="Hủy bỏ"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/btnxacnhan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btnxacnhan"
            app:layout_constraintTop_toTopOf="@id/btnxacnhan"
            android:layout_marginEnd="20dp"

            ></Button>









    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>